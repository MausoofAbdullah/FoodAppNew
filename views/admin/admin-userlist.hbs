<body>
    <div class="content">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Users List</strong>
                        </div>
                        <div class="card-body">
                            <table class="table" id="userTable">
                                <thead>

                                    <tr>
                                        <th scope="col"> No</th>
                                        <th scope="col">User Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Phone Number</th>
                                        <th scope="col">Action</th>

                                    </tr>

                                </thead>
                                <tbody>
                                    {{#each showUser}}
                                    <tr>
                                        <th scope="row">{{inc @index}}</th>
                                        <td>{{this.Name}}</td>
                                        <td>{{this.Email}}</td>
                                        <td>{{this.Phone}}</td>

                                        <td>
                                            {{#if this.isAdmin}}
                                            <a href="/admin/undo-admin/{{this._id}}" class="btn btn-danger"
                                                onclick="return confirm('Do you want to undo Admin {{this.Name}}')">Undo Admin</a>
                                            {{else}}

                                            <a href="/admin/make-admin/{{this._id}}" class="btn btn-warning"
                                                onclick="return confirm('Do you want to make User to Admin {{this.Name}}')">Make Admin</a>
                                            {{/if}}
                                        </td>

                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
</body>

